<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CounterView">
        <attr name="time" format="integer" />
        <attr name="resendText" format="string" />
    </declare-styleable>-

    <style name="CounterTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <declare-styleable name="SegmentedProgressBar">
        <attr name="dividerColor" format="color" />
        <attr name="progressBarBackgroundColor" format="color" />
        <attr name="progressBarColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="isDividerEnabled" format="boolean" />
        <attr name="divisions" format="integer" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
</resources>